  <RazorFunctions>
  <![CDATA[
  
  string RenderQuery(Dictionary<string,string> query) {
	  return string.Join("&", query.OrderBy(e => e.Key).Where(e => !string.IsNullOrEmpty(e.Value)).Select(e => e.Key + "=" + Uri.EscapeDataString(e.Value)).ToArray());
  }
  
  ]]>
  </RazorFunctions>

</Suite>