  <RestConnector Id="UserConverter" Title="Convert Username to Id" HelpText="">
    <Parameters>
      <Text Id="Username" DefaultValue="" Required="true"/>
    </Parameters>
    <Fetch>
      <Fetch.Url>
        <![CDATA[
        https://www.instagram.com/
        @(Model.Username)
        ]]>
