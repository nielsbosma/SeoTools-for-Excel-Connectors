                dtDateTime = dtDateTime.AddMilliseconds(epoch);
                string formatted = dtDateTime.ToString();
              }
              @(formatted)
            ]]>
        </Compute.Expr>
        <JsonPath Expr="closeTime" Id="Inp" DefaultValue="" Checked="False"/>
      </Compute>
