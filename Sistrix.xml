  <RestConnector Id="DomainOverview" Title="Domain Overview" Group="Domain Reports" HelpText="This delivers an overview on the current KPIs for the domain. Each selected field costs one credit." HelpUrl="https://www.sistrix.com/api/domain/#domainoverview">
    <Parameters>
      <Text Id="Domain" Title="Domain/Host/Path/URL" Debug.DefaultValue="https://google.com" Required="true"/>
      <Resource Id="SelectMode"/>
      <Resource Id="SelectCountry"/>
			<Resource Id="Extended"/>
    </Parameters>
		<Prepare>
      <Connector Id="SichtBarkeitsIndexHidden" Parameters="Domain,SelectMode,SelectCountry,Extended" RequiredField="SichtBarkeitsIndexGet"/>
      <Connector Id="KwCountSeoHidden" Parameters="Domain,SelectMode,SelectCountry,Extended" RequiredField="KwCountSeoGet"/>
      <Connector Id="KwCountSemHidden" Parameters="Domain,SelectMode,SelectCountry,Extended" RequiredField="KwCountSemGet"/>
      <Connector Id="DomainAgeHidden" Parameters="Domain" RequiredField="AgeGet"/>
      <Connector Id="DomainPagesHidden" Parameters="Domain" RequiredField="PagesGet"/>
    </Prepare>
    <Parse>
			<Compute Expr="@Model.SichtBarkeitsIndex" Id="SichtBarkeitsIndexGet" Title="Visibility Index" Converter="Auto"/>
			<Compute Expr="@Model.KwCountSeo" Id="KwCountSeoGet" Title="Keywords SEO" Converter="Auto"/>
			<Compute Expr="@Model.KwCountSem" Id="KwCountSemGet" Title="Keywords SEM" Converter="Auto"/>
			<Compute Expr="@Model.Age" Id="AgeGet" Title="Age" Converter="Auto"/>
			<Compute Expr="@Model.Pages" Id="PagesGet" Title="Pages" Converter="Auto"/>
    </Parse>
  </RestConnector>

