  <RestConnector Id="KeywordSeo" Title="Keyword SEO" HelpUrl="https://www.sistrix.com/api/keyword/#keywordseo">
    <Parameters>
      <Text Id="Keyword" Title="Keyword" DefaultValue="" Debug.DefaultValue="nyheter" Required="true" />
      <Text Id="Domain" Title="Domain" DefaultValue="" Debug.DefaultValue="" Required="false" />
      <Date Id="Date" Title="Date" Required="false" Nullable="true"/>
      <Number Id="Num" Title="Rows" DefaultValue="10" Required="false" HelpText="Number of rows to retreive."/>
      <Resource Id="SelectCountry" />
    </Parameters>
    <Fetch>
      <Fetch.Url>
      <![CDATA[
      https://api.sistrix.com/keyword.seo?api_key=@(Model.ApiKey)
      &kw=@Utils.UrlEncode(Model.Keyword)
			@if(Model.Date != null)
			{
				@: &date=@Model.Date.ToString("yyyy-MM-dd")
			}
			else
			{
			  @: &date=now
			}
			@if(!string.IsNullOrEmpty(Model.Domain))
			{
				@: &domain=@Utils.UrlEncode(Model.Domain)
			}
      &num=@(Model.Num)
      &country=@(Model.Country)
      &format=json
      ]]>
      </Fetch.Url>
      <HttpSettings>
        <RequestHeaders>
          <Header Name="User-Agent">SeoToolsForExcel</Header>
        </RequestHeaders>
      </HttpSettings>
    </Fetch>
    <Parse>
      <JsonPath Expr="$.answer[0].result[*]">
        <JsonPath Expr="position" Id="Position" Title="Position" Converter="Int"/>
        <JsonPath Expr="domain" Id="Domain" Title="Domain" Converter="String"/>
        <JsonPath Expr="url" Id="Url" Title="URL" Converter="String"/>
      </JsonPath>
    </Parse>
    <Fail>
      <JsonPath Expr="error.error_message"/>
    </Fail>
  </RestConnector>

