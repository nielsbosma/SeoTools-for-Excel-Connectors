<?xml version="1.0" encoding="utf-8" ?>
<Suite Title="HackerTarget" RequireVersion="8.2" Id="HackerTarget" Category="SEO" SourceUrl="https://github.com/nielsbosma/SeoTools-for-Excel-Connectors/blob/master/HackerTarget.xml" HelpUrl="http://seotoolsforexcel.com/hackertarget/" HelpText="Documentation">

  <Author Name="Victor" Url="http://community.seotoolsforexcel.com/users/diskborste/activity"/>

  <RestConnector Id="HttpHeaders" Title="HTTP Headers">
    <Parameters>
      <Text Id="Url" Title="URL" Required="true" Debug.DefaultValue="aftonbladet.se"/>
    </Parameters>
    <Fetch>
      <Fetch.Url>
        <![CDATA[
					http://api.hackertarget.com/httpheaders/?q=@Utils.UrlEncode(Model.Url)
        ]]>
      </Fetch.Url>
    </Fetch>
    <Parse>
      <Regex Expr="([\w_]+):\s" Id="Header" Title="Header" Group="1">
        <Regex Expr=".*" Group="0" Id="Headers" Converter="Auto"/>
			</Regex>
      <Regex Expr=":\s(.*)" Id="Value" Title="Value" Group="1">
        <Regex Expr=".*" Group="0" Id="Values" Converter="Auto"/>
			</Regex>
    </Parse>
  </RestConnector>

</Suite>