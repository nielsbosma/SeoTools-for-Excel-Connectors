  <Resources>
    <Resource Id="Sortings">
			<Item Id="date" Title="Date"/>
			<Item Id="title" Title="Title"/>
			<Item Id="relevance" Title="Relevance"/>
			<Item Id="viewCount" Title="View Count"/>
			<Item Id="rating" Title="Rating"/>
