<?xml version="1.0" encoding="utf-8" ?>
<Suite Category="SEO" Title="CognitiveSeo" Id="CognitiveSeo" RequireVersion="8.1.25" SourceUrl="https://github.com/nielsbosma/SeoTools-for-Excel-Connectors/blob/master/CognitiveSeo.xml" HelpUrl="http://seotoolsforexcel.com/cognitiveseo/" HelpText="Documentation">

  <Author Name="Victor Sandberg" Url="http://community.seotoolsforexcel.com/users/diskborste/activity" />

  <Settings HelpText="What's this?" HelpUrl="https://seotoolsforexcel.com/cognitiveseo/">
    <Text Id="ApiKey" Title="API Key" Required="true" HelpUrl="https://seotoolsforexcel.com/cognitiveseo/"/>
  </Settings>

	<!-- https://support.cognitiveseo.com/section/developer-api/-->

  <Resources>
    <Resource Id="Fail">
			<Fail>
				<JsonPath Expr="data.message"/>
			</Fail>
    </Resource>
    <Resource Id="Engines">
      <Select Id="Engine" Title="Filter by Search Engine">
        <DataSource>
					<Item Id="google" Title="Google"/>
					<Item Id="bing" Title="Bing"/>
					<Item Id="yahoo" Title="Yahoo"/>
        </DataSource>
      </Select>
    </Resource>
    <Resource Id="Devices">
      <Select Id="Device" Title="Filter by Device">
        <DataSource>
					<Item Id="desktop" Title="Desktop"/>
					<Item Id="mobile" Title="Mobile"/>
        </DataSource>
      </Select>
    </Resource>
    <Resource Id="LinkTypes">
      <Select Id="Type" Title="Type">
        <DataSource>
          <Item Id="all" Title="All"/>
          <Item Id="new" Title="New"/>
          <Item Id="lost" Title="Lost"/>
        </DataSource>
      </Select>
    </Resource>
  </Resources>

  <RestConnector Id="CampaignsListHidden" Hidden="true">
    <Fetch>
      <Fetch.Url>
        <![CDATA[
        http://api.cognitiveseo.com/command.php?apiKey=@(Model.ApiKey)&command=getCampaignInfo&campaignId=all
        ]]>
      </Fetch.Url>
    </Fetch>
    <Parse>
			<JsonPath Expr="$.data.data[*].">
				<JsonPath Expr="campaignId" Id="Id" Converter="Long"/>
				<JsonPath Expr="campaignName" Id="Name" Converter="String"/>
			</JsonPath>
    </Parse>
		<Resource Id="Fail"/>
  </RestConnector>

  <RestConnector Id="SitesListHidden" Hidden="true">
    <Parameters>
      <Text Id="CampaignId" Title="Filter by Campaign Id" Required="true" Debug.DefaultValue="2" Select.Connector="CampaignsListHidden" Select.IdField="Id" Select.TitleField="Name"/>
    </Parameters>
    <Fetch>
      <Fetch.Url>
        <![CDATA[
        http://api.cognitiveseo.com/command.php?apiKey=@(Model.ApiKey)&command=getCampaignInfo&campaignId=@(Model.CampaignId)
        ]]>
      </Fetch.Url>
    </Fetch>
    <Parse>
			<JsonPath Expr="$.data.data[*].sites.*">
				<JsonPath Expr="siteId" Id="Id" Converter="Long"/>
				<JsonPath Expr="url" Id="Url" Converter="String"/>
			</JsonPath>
    </Parse>
    <Resource Id="Fail"/>
  </RestConnector>

