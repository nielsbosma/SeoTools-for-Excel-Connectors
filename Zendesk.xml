        }
        else
				{
          @: https://@(Model.Subdomain).zendesk.com/api/v2/
					@(!string.IsNullOrEmpty(Model.FilterUser) ? "users/" + Model.FilterUser + "/tickets/" + Model.UserFilterType + ".json" : "tickets.json")
