        <JsonPath Expr="updated_at" Id="UpdatedAt" Title="Updated" Converter="DateTime"/>
        <JsonPath Expr="last_login_at" Id="LastLogin" Title="Last Login" Converter="Auto"/>
      </JsonPath>
    </Parse>
  </RestConnector>

