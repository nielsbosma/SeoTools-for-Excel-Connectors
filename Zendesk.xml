  <RestConnector Id="ListTicketSkips" Title="Ticket Skips" Group="Tickets" HelpText="List ticket skips (records of when agents skip over tickets without responding)" HelpUrl="https://developer.zendesk.com/rest_api/docs/core/ticket_skips">
