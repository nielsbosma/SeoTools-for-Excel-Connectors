  <RestConnector Id="Sites" Hidden="true">
    <Fetch>
      <Fetch.Url>
        <![CDATA[
					https://ssl.bing.com/webmaster/api.svc/json/GetUserSites?apikey=@(Model.APIKey)
					]]>
      </Fetch.Url>
			<Resource Id="HttpSettings"/>
    </Fetch>
    <Parse>
      <JsonPath Expr="$.d[*]">
        <JsonPath Expr="Url" Id="Url"/>
      </JsonPath>
    </Parse>
		<Resource Id="Fail"/>
