      <Text Id="Domain" Title="Domain" DefaultValue="" Required="true" Select.Connector="ListDomains" Select.IdField="Id" Select.TitleField="domain" HelpText="Select a domain."/>
      <Text Id="Keyword" Title="Keyword Id" DefaultValue="" Required="true"/>
    </Parameters>
    <Paging PageSize="30"/>
    <Fetch>
      <HttpSettings>
        <RequestHeaders>
          <Header Name='Authorization'>Token @Model.ApiToken</Header>
        </RequestHeaders>
      </HttpSettings>
      <Fetch.Url>
        <![CDATA[
        https://app.accuranker.com/api/v3/domains/@(Model.Domain)/keywords/@(Model.Keyword)/
