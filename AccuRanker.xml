  <RazorFunctions>
    <![CDATA[
    String GetQuery()
	  {
		  if(Model.SearchType == "web")
		  {
			  return "=='1'";
		  }
		  else if(Model.SearchType == "mobile")
		  {
			  return "=='2'";
		  }
		  else
		  {
			  return ">>'0'";
		  }
    }
    ]]>
  </RazorFunctions>

</Suite>
